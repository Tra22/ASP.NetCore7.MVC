@model MVC.Payloads.Requests.Products.UpdateProduct;
@{
    ViewData["Title"] = "Update Page";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<div>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create Product</h3>
            </div>
            @using (Html.BeginForm("Update", "Product", FormMethod.Post, new { @Id = @Model.Id }))
            {   
                @Html.AntiForgeryToken()
                <div class="card-body">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        <label for="Name">Name</label>
                        @Html.TextBoxFor(m => m.Name,  new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-switch">
                            @Html.CheckBoxFor(m => m.IsDeleted,  new { @class = "custom-control-input", @value="true",  @checked = true })
                            <label class="custom-control-label" for="IsDeleted">Deleted</label>
                        </div>
                        @Html.ValidationMessageFor(m => m.IsDeleted, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>